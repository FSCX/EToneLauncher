<LinearLayout
    android:id="@+id/clickApp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/desktop_app_item_margin_left"
    android:layout_marginTop="@dimen/desktop_app_item_margin"
    android:layout_marginRight="@dimen/desktop_app_item_margin"
    android:layout_marginBottom="@dimen/desktop_app_item_margin"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="@dimen/desktop_app_out"
        android:layout_height="@dimen/desktop_app_out"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/app_icon"
            android:gravity="center"
            android:layout_width="@dimen/desktop_app_image_in"
            android:layout_height="@dimen/desktop_app_image_in"
            android:background="@mipmap/application_market"
            android:scaleType="centerInside"
            android:paddingBottom="@dimen/desktop_app_in_padding_bottom"
             />
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:paddingRight="@dimen/desktop_app_in_app_name_padding"
            android:paddingLeft="@dimen/desktop_app_in_app_name_padding"
            android:layout_marginTop="@dimen/desktop_app_in_app_name_margin_top"
            android:text="name"/>
    </LinearLayout>

</LinearLayout>